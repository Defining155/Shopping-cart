{% extends 'base.html.twig' %}

{% block title %}Producten lijst{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Naam</th>
            <th>Prijs</th>
            <th>Description</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in product %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.Naam }}</td>
                <td>{{ product.Prijs }}</td>
                <td>{{ product.description }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}"><button type="button" class="btn btn-secondary">show</button></a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}"><button type="button" class="btn btn-warning">edit</button></a>
                    <a href="{{ path('product_add', {'id': product.id}) }}"><button type="button" class="btn btn-success">add to cart</button></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}"><button type="button" class="btn btn-secondary">create new</button></a>
{% endblock %}
