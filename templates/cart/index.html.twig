{% extends 'base.html.twig' %}

{% block title %}Producten lijst{% endblock %}

{% block body %}
    <h1>Winkelwagen</h1>

    <table class="table">
        <tbody>
        {% for product in Products %}
            <tr>
                naam: {{ product.Product.Naam }} <br>
                aantal: {{ product.Amount }} <br>
                prijs: {{ product.Product.Prijs }} <br><br>

            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('cart_checkout') }}"><button type="button" class="btn btn-secondary">Afrekenen</button></a>
{% endblock %}
